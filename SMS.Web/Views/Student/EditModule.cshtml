@model ModuleViewModel

<h3 class="mt-4 mb-4">Add Module</h3>

<form asp-action="EditModule">
    <!-- we hide the Model StudentId  and ModuleId they are not user editable but need to be in form  -->

    <input type="hidden" asp-for="StudentId" class="form-control" />
    <input type="hidden" asp-for="ModuleId" class="form-control" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Grade" class="control-label"></label>
        <input asp-for="Grade" class="form-control"></input>
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-secondary" asp-action="Details" asp-route-id=@Model.StudentId>Cancel</a>
    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}